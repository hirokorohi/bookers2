<div class='container'>
	<h2 class="mt-3">User info</h2>
	  <% if @user.errors.any? %>
  	 <%= @user.errors.count %>errors prohibited this obj from being saved:
     <ul>
   	  <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>

	  <%= form_with model: @user do |f| %><!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
	 	 <h4>Name</h4>
  		<%= f.text_field :name %><br>
     <h4>Image</h4>
      <%= f.file_field :profile_image, accept: "image/*", size:"100,100" %>
	   <h4>Introduction</h4>
  		<%= f.text_field :introduction %><br>
  		<%= f.submit 'Update User' %>
  	<% end %>
</div>