<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <!-- モックのため、固定値や未実装になっている部分があります。アプリ完成前に修正しましょう。 -->
	    <table class='table'>
	      <tr>
	        <%= image_tag @user.get_profile_image(100,100) %>  <!-- 固定値 -->
	      	<% if @user == current_user %>
	      	 <p><% link_to edit_user_path(@user) %></p>
	      	<% end %>
	      </tr>
	      <tr>
	       <th>name</th>
	       <th><%= @user.name %></th>
	        <% if @user == current_user %>
	         <p><% link_to edit_user_path(@user) %></p>
	        <% end %><!-- 固定値 -->
	       </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>  <!-- 固定値 -->
	        <% if @user == current_user %>
	         <p><% link_to edit_user_path(@user) %></p>
	        <% end %>
	      </tr>
	    </table>

	  <div class='row'>
	    <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    　<% end %>
    </div>

  <div class="row">
	  <h2 class="mt-3">New book</h2>
	  <%= form_with model: @book do |f| %><!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
	 	<div class="form-group">
	 		<h4>Title</h4>
  		<%= f.text_field :title %>
  	</div>
  	<div class="form-group">
  		<h4>Opinion</h4>
  		<%= f.text_area :body %>
  	</div>
  	<br>
    <div class="form-group">
      <%= f.submit 'Create Book',class: "btn btn-success" %>
    </div>
  		<% end %>
	</div>
		</div>

	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <!-- 投稿した書籍一覧表示を作成しましょう。 -->
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
	     		<% @books.each do |book| %>
     			　<tr>
			      <td><%= link_to user_path(book.user) do%>
			      <%= image_tag book.user.get_profile_image(100,100) %>
			      <% end %>
			      </td>
			      <td><%= link_to book.title,book_path(book.id) %></td>
			      <td><%= book.body %></td>
		 				</tr>
    			<% end %>
    		</tbody>
    	</table>
　	</div>
　</div>
</div>

